{
  "appId": "com.aoba.meal-app",
  "productName": "あおば給食管理",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "build/**/*",
    "electron/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/icon-512x512.png"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icons/icon-512x512.png",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/icon-512x512.png",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "あおば給食管理",
    "installerIcon": "public/icons/icon-512x512.png",
    "uninstallerIcon": "public/icons/icon-512x512.png",
    "installerHeaderIcon": "public/icons/icon-512x512.png",
    "language": "2052"
  },
  "portable": {
    "artifactName": "あおば給食管理-portable-${version}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": null
}


